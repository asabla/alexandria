# =============================================================================
# Alexandria Environment Configuration
# Copy this file to .env and adjust values for your environment
# =============================================================================

# -----------------------------------------------------------------------------
# Application
# -----------------------------------------------------------------------------
APP_NAME=alexandria
APP_ENV=development
DEBUG=true
LOG_LEVEL=INFO

# -----------------------------------------------------------------------------
# API Server
# -----------------------------------------------------------------------------
API_HOST=0.0.0.0
API_PORT=8080
API_WORKERS=1

# -----------------------------------------------------------------------------
# PostgreSQL
# -----------------------------------------------------------------------------
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=alexandria
POSTGRES_PASSWORD=alexandria_dev_password
POSTGRES_DB=alexandria
DATABASE_URL=postgresql+asyncpg://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# -----------------------------------------------------------------------------
# MinIO (Object Storage)
# -----------------------------------------------------------------------------
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_SECURE=false
MINIO_BUCKET_DOCUMENTS=documents
MINIO_BUCKET_THUMBNAILS=thumbnails

# -----------------------------------------------------------------------------
# Qdrant (Vector Database)
# -----------------------------------------------------------------------------
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_URL=http://${QDRANT_HOST}:${QDRANT_PORT}
QDRANT_COLLECTION=documents

# -----------------------------------------------------------------------------
# Neo4j (Graph Database)
# -----------------------------------------------------------------------------
NEO4J_HOST=localhost
NEO4J_BOLT_PORT=7687
NEO4J_HTTP_PORT=7474
NEO4J_URI=bolt://${NEO4J_HOST}:${NEO4J_BOLT_PORT}
NEO4J_USER=neo4j
NEO4J_PASSWORD=neo4j_dev_password

# -----------------------------------------------------------------------------
# MeiliSearch (Full-text Search)
# -----------------------------------------------------------------------------
MEILISEARCH_HOST=localhost
MEILISEARCH_PORT=7700
MEILISEARCH_URL=http://${MEILISEARCH_HOST}:${MEILISEARCH_PORT}
MEILISEARCH_API_KEY=masterKey
MEILISEARCH_INDEX=documents

# -----------------------------------------------------------------------------
# Temporal (Workflow Orchestration)
# -----------------------------------------------------------------------------
TEMPORAL_HOST=localhost
TEMPORAL_PORT=7233
TEMPORAL_ADDRESS=${TEMPORAL_HOST}:${TEMPORAL_PORT}
TEMPORAL_NAMESPACE=default
TEMPORAL_TASK_QUEUE_INGESTION=ingestion-tasks
TEMPORAL_TASK_QUEUE_AGENT=agent-tasks
TEMPORAL_TASK_QUEUE_QUERY=query-tasks

# -----------------------------------------------------------------------------
# vLLM (LLM Serving)
# -----------------------------------------------------------------------------
VLLM_HOST=localhost
VLLM_PORT=8000
VLLM_BASE_URL=http://${VLLM_HOST}:${VLLM_PORT}/v1
VLLM_CHAT_MODEL=meta-llama/Llama-3.1-8B-Instruct
VLLM_EMBEDDING_MODEL=BAAI/bge-large-en-v1.5

# -----------------------------------------------------------------------------
# Multi-tenancy
# -----------------------------------------------------------------------------
# Set to true for single-tenant mode (bypasses tenant authentication)
SINGLE_TENANT_MODE=true
# Default tenant/project for single-tenant mode
DEFAULT_TENANT_ID=default
DEFAULT_PROJECT_ID=default

# -----------------------------------------------------------------------------
# Observability
# -----------------------------------------------------------------------------
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
OTEL_SERVICE_NAME=alexandria
JAEGER_UI_URL=http://localhost:16686
PROMETHEUS_URL=http://localhost:9090
GRAFANA_URL=http://localhost:3000

# -----------------------------------------------------------------------------
# Security (Production - leave empty for development)
# -----------------------------------------------------------------------------
# SECRET_KEY=your-secret-key-here
# JWT_ALGORITHM=HS256
# JWT_EXPIRATION_HOURS=24
